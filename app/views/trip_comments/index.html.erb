<p id="notice"><%= notice %></p>

<h1>Trip Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th>Trip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trip_comments.each do |trip_comment| %>
      <tr>
        <td><%= trip_comment.body %></td>
        <td><%= trip_comment.user %></td>
        <td><%= trip_comment.trip %></td>
        <td><%= link_to 'Show', trip_comment %></td>
        <td><%= link_to 'Edit', edit_trip_comment_path(trip_comment) %></td>
        <td><%= link_to 'Destroy', trip_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip Comment', new_trip_comment_path %>
